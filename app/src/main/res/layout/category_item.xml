<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myCardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_margin="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/category_recipe_img"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"
                android:foregroundGravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/oatpancake"
                android:layout_marginStart="20dp"
                 app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            />

        <TextView
            android:id="@+id/category_recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="15dp"
            android:text="oat pancakes"
            android:textColor="@color/darkgray"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@id/category_recipe_img"
            />

        <TextView
            android:id="@+id/category_recipe_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:text="10 min"
            android:textAlignment="textEnd"
            android:textColor="@color/darkgray"
            android:textSize="14sp"
            android:layout_below="@id/category_recipe_name"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/category_recipe_name"
            android:layout_alignParentTop="true"

            />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>





















